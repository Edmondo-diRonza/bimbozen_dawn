{% schema %}
{
  "name": "Informazioni Pagamenti",
  "settings": [],
  "blocks": [
    {
      "type": "text_section",
      "name": "Sezione Testo",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titolo"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Testo"
        }
      ]
    },
    {
      "type": "payment_methods",
      "name": "Metodi di Pagamento",
      "settings": [
        {
          "type": "text",
          "id": "payment_title",
          "label": "Titolo Metodo di Pagamento"
        },
        {
          "type": "textarea",
          "id": "payment_description",
          "label": "Descrizione"
        },
        {
          "type": "image_picker",
          "id": "payment_icon",
          "label": "Icona Metodo di Pagamento"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pagina Informativa",
    }
  ]
}
{% endschema %}

<div class="info-page">
  <div class="info-sections">
    {% for block in section.blocks %}
      {% if block.type == "text_section" %}
        <div class="info-section">
          <h2 class="info-title">{{ block.settings.title }}</h2>
          <p class="info-content">{{ block.settings.content }}</p>
        </div>
      {% elsif block.type == "payment_methods" %}
        <div class="payment-method">
          <h3 class="payment-title">{{ block.settings.payment_title }}</h3>
          <p class="payment-description">{{ block.settings.payment_description }}</p>
          {% if block.settings.payment_icon %}
            <img width="20px" height="20px" src="{{ block.settings.payment_icon | file_url }}" alt="{{ block.settings.payment_title }}" class="payment-icon" />
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .info-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: Arial, sans-serif;
    line-height: 1.6;
  }
  .info-section {
    margin-bottom: 40px;
  }
  .info-title {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 10px;
  }
  .info-content {
    font-size: 1rem;
    color: #666;
  }
  .payment-method {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
  }
  .payment-title {
    font-size: 1.2rem;
    font-weight: bold;
    color: #555;
  }
  .payment-description {
    font-size: 1rem;
    color: #666;
    flex-grow: 1;
  }
  .payment-icon {
    width: 50px;
    height: auto;
  }
</style>

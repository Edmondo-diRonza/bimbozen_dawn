{% schema %}
{
  "name": "Spedizioni e pagamenti",
  "settings": [],
  "blocks": [
    {
      "type": "shipping",
      "name": "accordion",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Domanda"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Risposta"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pagina FAQ con Accordion",
    }
  ]
}
{% endschema %}

<div class="faq-page">
  <h1 class="faq-title"> {{ 'spedizioni.title' | t }}</h1>
  <div class="faq-items">
    {% for block in section.blocks %}
      <div class="faq-item">
        <button class="faq-question" aria-expanded="false">
          {{ block.settings.question }}
          <span class="faq-icon">+</span>
        </button>
        <div class="faq-answer" hidden>
          <p>{{ block.settings.answer }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .faq-page {
    
    margin: 0 auto;
    padding: 20px;
  }
  .faq-title {
    text-align: center;
    margin: 40px 0;
    font-size: 4rem;
    color: #333;
  }
  .faq-item {
    margin-bottom: 20px;
    border-bottom: 1px solid #ddd;
  }
  .faq-question {
    width: 100%;
    text-align: left;
    background: #f9f9f9;
    border: none;
    padding: 15px;
    font-size: 1.8rem;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #555;
  }
  .faq-question[aria-expanded="true"] {
   font-weight: bold;
  }
  .faq-icon {
    font-size: 1.5rem;
    line-height: 1;
  }
  .faq-answer {
    padding: 15px;
    font-size: 1.5rem;
    color: #666;
    background: #f1f1f1;
    border-radius: 5px;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
     .faq-title {
    
    font-size: 2.5rem;
   
  }

   .faq-question {
   
    font-size: 1.6rem;
   
  }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const faqItems = document.querySelectorAll(".faq-item");

    faqItems.forEach(item => {
      const question = item.querySelector(".faq-question");
      const answer = item.querySelector(".faq-answer");

      question.addEventListener("click", () => {
        const expanded = question.getAttribute("aria-expanded") === "true" || false;

        // Close all other accordions
        document.querySelectorAll(".faq-question[aria-expanded='true']").forEach(btn => {
          btn.setAttribute("aria-expanded", "false");
          btn.nextElementSibling.hidden = true;
        });

        // Toggle current accordion
        question.setAttribute("aria-expanded", !expanded);
        answer.hidden = expanded;
      });
    });
  });
</script>

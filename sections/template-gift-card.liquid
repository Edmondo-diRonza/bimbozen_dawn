        <div class="faq-item">
            <button class="faq-question" aria-expanded="false">
               {{ 'giftsection.faq2.question' | t}}
                <span class="faq-icon">+</span>
            </button>
            <ul class="faq-answer" hidden>
                <li>{{ 'giftsection.faq2.answer.list.1' | t}}</li>
                <li>{{ 'giftsection.faq2.answer.list.2' | t}}</li>
                <li>{{ 'giftsection.faq2.answer.list.3' | t}}</li>
                <li>{{ 'giftsection.faq2.answer.list.4' | t}}</li>

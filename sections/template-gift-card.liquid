        class="tw-my-20 tw-max-w-full tw-flex tw-flex-col tw-items-center tw-justify-center tw-gap-10 tw-w-[95%] tw-mx-auto">
        <h2 class="tw-text-main tw-text-4xl tw-font-bold">{{ 'giftsection.balance.title' | t}}</h2>
        <p class="tw-text-main tw-text-2xl tw-text-center">{{ 'giftsection.balance.text' | t}}</p>
        <div class="tw-flex tw-items-center tw-justify-center tw-h-full tw-w-[95%] tw-mx-auto">
            {% render 'gift-card-check' %}

        </div>
    </div>

</div>

<style>
    .faq-page {

        margin: 0 auto;
        padding: 20px;
    }

    .faq-title {
        text-align: center;
        margin: 40px 0;
        font-size: 4rem;
        color: #333;
    }

    .faq-item {
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
    }

    .faq-question {
        width: 100%;
        text-align: left;
        border: none;
        padding: 15px;
        font-size: 1.8rem;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #555;
    }

    .faq-question[aria-expanded="true"] {
        font-weight: bold;
    }

    .faq-icon {
        font-size: 1.5rem;
        line-height: 1;
    }

    .faq-answer {
        padding: 15px;
        font-size: 1.5rem;
        color: #666;
        border-radius: 5px;
        line-height: 1.5;
    }

    @media screen and (max-width: 768px) {
        .faq-title {

            font-size: 2.5rem;

        }

        .faq-question {

            font-size: 1.6rem;

        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const faqItems = document.querySelectorAll(".faq-item");

        faqItems.forEach(item => {
            const question = item.querySelector(".faq-question");
            const answer = item.querySelector(".faq-answer");

            question.addEventListener("click", () => {
                const expanded = question.getAttribute("aria-expanded") === "true" || false;

                // Close all other accordions
                document.querySelectorAll(".faq-question[aria-expanded='true']").forEach(btn => {
                    btn.setAttribute("aria-expanded", "false");
                    btn.nextElementSibling.hidden = true;
                });

                // Toggle current accordion
                question.setAttribute("aria-expanded", !expanded);
                answer.hidden = expanded;
            });
        });
    });
</script>




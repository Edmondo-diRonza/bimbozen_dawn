<div class="swiper-container tw-h-[calc(100vh_-_150px)] lg:tw-min-h-[calc(100vh_-_150px)] tw-w-[90%] tw-mx-auto ">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="hero__image-wrapper tw-relative swiper-slide">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: '1920x' }}"
            alt="Hero Image"
            class="tw-object-cover tw-object-top tw-w-full tw-h-full"
            width="1920px"
            height="auto"
          >
        {% else %}
          {% assign placeholder_image = 'lifestyle-1' %}
          {{
            placeholder_image
            | placeholder_svg_tag: 'hero__image-wrapper tw-object-cover tw-object-top tw-w-full tw-h-full'
          }}
        {% endif %}
        <div class="hero__overlay tw-absolute tw-inset-0 overlay tw-bg-black/40">
          <!-- Overlay -->
          <div class="hero__message-wrapper tw-absolute tw-inset-0 tw-flex tw-items-center tw-justify-center tw-text-2xl tw-text-white">
            <!-- Testo Dinamico -->
            <div class="tw-flex tw-flex-col lg:tw-items-center lg:tw-justify-center lg:tw-text-center tw-gap-4 tw-w-[90%]">
              <h1
                class="tw-text-white tw-text-6xl lg:tw-text-8xl"
              >
                {{ block.settings.text | default: 'Testo Predefinito' }}
              </h1>
              {% if block.settings.subtext %}
                <p class="tw-text-white tw-text-xl lg:tw-text-4xl">
                  {{ block.settings.subtext }}
                </p>
              {% endif %}

              {%- if block.settings.button_text != blank -%}
                <a
                  {% if block.settings.button_url == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_url }}"
                  {% endif %}
                  class="tw-py-4 tw-px-6 tw-rounded-[30px] tw-transition tw-duration-200 tw-bg-main tw-uppercase tw-text-white tw-max-w-max tw-text-xl "
                >
                  {{- block.settings.button_text | escape -}}
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Dots di navigazione -->
  <div class="swiper-pagination"></div>
</div>
<style>
  .swiper-pagination {
    position: absolute;
    bottom: -20px !important;
    /* Distanza dalla fine dell'immagine */
    left: 50%;
    transform: translateX(-50%);
    /* Centra i dots */
    display: flex;
    gap: 5px;
    /* Spaziatura tra i dots */
    justify-content: center;
  }

  .swiper-pagination-bullet {
    width: 15px !important;
    /* Larghezza dei dots */
    height: 15px !important;
    /* Altezza dei dots */
    background: transparent;
    /* Sfondo trasparente di default */
    border: 2px solid white;
    /* Bordo bianco */
    border-radius: 50%;
    /* Rendi i dots rotondi */
  }

  .swiper-pagination-bullet-active {
    background: white !important;
    /* Colore di sfondo attivo */
    border: none;
    /* Rimuovi il bordo per il dot attivo */
  }

  @media screen and (max-width: 768px) {
    .swiper-pagination {
      bottom: 0 !important;
      /* Distanza dalla fine dell'immagine */
    }
  }
</style>
{% schema %}
{
  "name": "Hero",
  "settings": [],
  "blocks": [
    {
      "type": "image_block",
      "name": "Immagine Hero",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Seleziona Immagine"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Testo Dinamico",
          "default": "Testo Predefinito"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Testo Sottotitolo",
          "default": "Testo predefinito"
        },
        {
          "type": "range",
          "id": "text_size",
          "label": "Dimensione Titolo principale",
          "min": 96,
          "max": 120,
          "step": 1,
          "default": 96
        },
        {
          "type": "range",
          "id": "subtext_size",
          "label": "Dimensione Paragrafo",
          "min": 16,
          "max": 48,
          "step": 1,
          "default": 16
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Testo Bottone",
          "default": "Tutti i prodotti"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Url Bottone",
          "default": "/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "blocks": [
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        }
      ]
    }
  ]
}
{% endschema %}

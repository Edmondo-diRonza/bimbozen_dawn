<div class="tw-w-full tw-h-[500px]">
  {% if section.settings.image != blank %}
    <img
      src="{{ section.settings.image | img_url: '1920x' }}"
      alt="Hero Image"
      class="tw-object-cover tw-object-top tw-w-full tw-h-full"
      width="1920px"
      height="auto">
  {% else %}
    {% assign placeholder_image = 'lifestyle-1' %}
    {{ placeholder_image
 | placeholder_svg_tag: 'hero__image-wrapper tw-object-cover tw-object-top tw-w-full tw-h-full tw-bg-main/50'
    }}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Seleziona Immagine"
      }
    ],

    "presets": [
      {
        "name": "Hero"
      }
    ]
  }
{% endschema %}
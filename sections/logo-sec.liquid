<div class="hero__logo-container tw-w-[90%] tw-mx-auto tw-my-20">
  <ul class="hero__logo-wrapper lg:tw-grid tw-hidden lg:tw-grid-cols-5 tw-items-center tw-justify-center">
    {% for logo in logos %}
      {% if forloop.index <= 5 %}
        <li class="hero__logo-item tw-flex tw-justify-center tw-grayscale tw-opacity-50 hover:tw-grayscale-0">

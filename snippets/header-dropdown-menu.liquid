{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'header-dropdown-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li >
        {%- if link.links != blank -%}
          <header-menu >
            <details id="Details-HeaderMenu-{{ forloop.index }}">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset tw-font-bold !tw-text-white tw-uppercase !tw-text-2xl tw-mr-6"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item !tw-text-[#BCC7E4]"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>
              <ul
                id="HeaderMenu-MenuList-{{ forloop.index }}"
                class="header__submenu tw-absolute tw-top-full tw-left-0 tw-z-50 !tw-grid !tw-grid-cols-2 tw-gap-10 list-menu list-menu--disclosure motion-reduce global-settings-popup tw-bg-white"
                role="list"
                tabindex="-1"
              >
                {%- for childlink in link.links -%}
                  <li class="tw-w-full ">
                    {%- if childlink.links == blank -%}
                      
                      <a
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        href="{{ childlink.url }}"
                        class="header__menu-item !tw-text-main tw-uppercase !tw-bg-main/20 tw-font-bold list-menu__item  link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {{ childlink.title | escape }} 
                      </a>
                    {%- else -%}
                      {% comment %} <details id="Details-HeaderSubMenu-{{ link.handle }}-{{ childlink.handle }}">
                        <summary
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                          class="header__menu-item link link--text list-menu__item focus-inset caption-large tw-font-bold !tw-text-2xl tw-uppercase"
                        >
                          <span>{{ childlink.title | escape }}</span>
                          {{- 'icon-caret.svg' | inline_asset_content -}}
                        </summary>
                        <ul
                          id="HeaderMenu-SubMenuList-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                          class="header__submenu list-menu motion-reduce !tw-font-bold"
                        >
                          {%- for grandchildlink in childlink.links -%}
                            <li>
                              <a
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                href="{{ grandchildlink.url }}"
                                class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ grandchildlink.title | escape }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </details> {% endcomment %}
                      <div id="HeaderSubMenu-{{ link.handle }}-{{ childlink.handle }}">
  <h3 class="header__menu-item !tw-text-main   link link--text list-menu__item focus-inset caption-large tw-font-bold !tw-text-2xl tw-uppercase">
    <span>{{ childlink.title | escape }}</span>
  </h3>
  <div class="tw-bg-main/30 tw-w-full tw-h-[0.02rem]"></div>
  <ul
    id="HeaderMenu-SubMenuList-{{ link.handle }}-{{ childlink.handle }}"
    class="header__submenu list-menu "
  >
    {%- for grandchildlink in childlink.links -%}
      <li class="list-menu__item">
        <a
          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
          href="{{ grandchildlink.url }}"
          class="header__menu-item link !tw-text-main  !tw-text-2xl link--text caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"
          {% if grandchildlink.current %}
            aria-current="page"
          {% endif %}
        >
          {{ grandchildlink.title | escape }}
        </a>
      </li>
    {%- endfor -%}
  </ul>
</div>

                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class=" tw-font-bold header__menu-item list-menu__item  link link--text focus-inset !tw-text-2xl !tw-text-white tw-uppercase tw-mr-6"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="menu_dropdown header__active-menu-item !tw-text-[#BCC7E4] "
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
